# {{ client_name }}-ansible-pull-{{ runtype }}.timer
# {{ ansible_managed }}
[Unit]
Description=Runs ansible pull for {{ client_name }} client {{ runtype }}
AssertPathExists={{ potos_basics_ansible_workdir }}

[Timer]
Unit={{ client_name | lower }}-ansible-pull@{{ runtype }}.service
OnCalendar={{ onCalendar | default(runtype) }}
Persistent=true

[Install]
WantedBy=timers.target